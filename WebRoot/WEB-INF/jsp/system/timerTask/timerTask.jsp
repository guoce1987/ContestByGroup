		$(top.hangge());
		
		//定时任务toggle
		function timerTaskToggle1(){
			var switch_type;
			if(document.getElementById('switch1').checked){
				switch_type = true;
			}else if(!document.getElementById('switch1').checked){
				switch_type = false;
			};
			$.ajax({
				type: "GET",
				url: '<%=basePath%>global/timerTaskToggle.do?tm='+new Date().getTime(),
		    	data: {SWITCH_TYPE:switch_type},
				dataType:'json',
				cache: false,
				success: function(data){
/* 					if(switch_type){
						alert("定时任务1开启");
					}else{
						alert("定时任务1关闭");
					} */
					nextPage(${page.currentPage});
				}
			});
		}
		
		//检索
		function search(){
